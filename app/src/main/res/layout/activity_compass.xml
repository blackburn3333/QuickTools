<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jay.quicktools.compass">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_back"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/back_btn_white" />

        <ImageView
            android:id="@+id/compass_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:contentDescription="@string/comapp_dec"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/compass_arrow" />


    </LinearLayout>
</RelativeLayout>
